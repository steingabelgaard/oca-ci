#!/bin/bash

#
# Run tests. Use unbuffer to get a colored output.
#

set -ex

oca_wait_for_postgres

ADDONS=$(addons --addons-dir ${ADDONS_DIR} --include "${INCLUDE}" --exclude "${EXCLUDE}" list)
if [ -z "$ADDONS" ]; then
    exit 0
fi

unbuffer coverage run --include "${ADDONS_DIR}/*" --branch \
    $(which odoo || which openerp-server) \
    -d ${PGDATABASE} \
    -i ${ADDONS} \
    --test-enable \
    --stop-after-init 2>&1 | tee /tmp/odoo.out

if [[ ! -z "${{ github.event.pull_request.number }}" ]]; then
    if grep -q -wi "WARNING" /tmp/odoo.out; then
        gh pr edit ${{ github.event.pull_request.number }} --add-label "warnings"
    else
        gh pr edit ${{ github.event.pull_request.number }} --remove-label "warnings"
    fi
fi
